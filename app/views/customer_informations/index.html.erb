<div class="container">
  <div class="row margin-b10">
    <div class="col-sm-9 col-xs-9">
      <div class="col-sm-3 col-xs-3">
        <h4>お客様情報管理</h4>
      </div>
    </div>
  </div>
  <table class='table table-striped table-bordered '>
    <thead>
      <tr class="active">
        <th width="10%" class="text-left"><%= t('.name')%></th>
        <th width="20%" class="text-left"><%= t('.email')%></th>
        <th width="10%" class="text-left"><%= t('.phone')%></th>
        <th width="15%" class="text-left"><%= t('.zipcode')%></th>
        <th width="15%" class="text-left"><%= t('.prefecture')%></th>
        <th width="15%" class="text-left"><%= t('.municipality')%></th>
        <th width="15%" class="text-left"><%= t('.street')%></th>
        <th width="15%" class="text-left"><%= t('.building')%></th>
        <th width="15%" class="text-right"><%= t('.created_at')%></th>
        <th width="15%" class="text-right"><%= t('.updated_at')%></th>
      </tr>
    </thead>
    <tbody>
    <% if @customer_informations.size > 0 %>
      <% @customer_informations.each do |cus_info| %>
        <tr>
          <td class="text-left"><%= cus_info.name %></td>
          <td class="text-left"><%= cus_info.email %></td>
          <td class="text-left"><%= cus_info.phone %></td>
          <td class="text-left"><%= cus_info.zipcode %></td>
          <td class="text-left"><%= cus_info.prefecture %></td>
          <td class="text-left"><%= cus_info.municipality %></td>
          <td class="text-left"><%= cus_info.street %></td>
          <td class="text-left"><%= cus_info.building %></td>
          <td class="text-right"><%= format_datetime(cus_info.created_at) %></td>
          <td class="text-right"><%= format_datetime(cus_info.updated_at) %></td>
        </tr>
      <%end%>
    <%else%>
      <tr>
        <td colspan="11" class="text-center"><%= 'お客様情報が見つかりません。' %></td>
      </tr>
    <%end%>
    </tbody>
  </table>
  <div class='text-center'><%= paginate @customer_informations %></div>
</div>
