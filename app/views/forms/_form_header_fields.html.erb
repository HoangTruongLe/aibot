<div class="nested-fields col-sm-12">
  <%= link_to_remove_association 'x', f, {class: "btn btn-danger pull-right", style:"border-radius:50%"} %>
  <div class="col-sm-10">
    <div class="form-group link_card_type">
      <label class="control-label col-sm-1"><%= t('.header_key') %></label>
      <div class="field col-sm-4">
        <%= f.text_field :header_key, {class: "form-control", placeholder: t('.pld_header_key')} %>
      </div>
      <label class="control-label col-sm-1"><%= t('.header_value') %></label>
      <div class="field col-sm-4">
        <%= f.text_field :header_value, {class: "form-control", placeholder: t('.pld_header_value')} %>
      </div>
    </div>
  </div>
</div>
