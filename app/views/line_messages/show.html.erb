<div class="container">
  <div class="row">
  	<div class="col-sm-6 padding-0">
  		<h4>チュートリアル</h4>
  	</div>
  	<div class="col-sm-6 text-right padding-0">
      <a href="javascript:void();" class="btn btn-cancel" data-toggle="modal" data-target="#preview_modal">プレビュー</a>
      <%= link_to "編集する", edit_line_message_path(@line_message), class: "btn btn-save" %>
  	</div>
  </div>
  <div class="row mrg20B table_container">
    <div class="row text-right mrg20B">
      <span class="mrg45R">最終更新者: <%= @line_message.updated_user.try(:name) %></span>
      <span class="mrg45R">チャットボット名： <%= @line_message.chatbot.try(:name) %></span>
      <span class="mrg45R">アクティビティ： <%= format_activity(@line_message.activity)%></span>
      <span>更新日時: <%= format_datetime(@line_message.updated_at) %></span>
    </div>
    <div class="row">
    <table class='table table-striped table-bordered'>
      <tbody>
        <tr>
          <td width="20%" class="text-center">
  					<strong>画像</strong>
          </td>
          <td width="80%">
            <div class="col-sm-12  line_message_thumbnail_wrapper mrg20T mrg20B">
              <img src="<%= @line_message.image_url %>"/>
            </div>
          </td>
        </tr>
        <tr>
          <td width="20%" class="text-center"><strong>内容</strong></td>
          <td width="80%" class="line_message_mrg user-name-wrapper text-center"><%= @line_message.content %></td>
        </tr>
        <tr>
          <td width="20%" class="text-center"><strong>ボタン文言</strong></td>
          <td width="80%" class="line_message_mrg user-name-wrapper text-center"><%= @line_message.button_wording %></td>
        </tr>
        <tr>
          <td width="20%" class="text-center"><strong>LINEのアカウント</strong></td>
          <td width="80%" class="line_message_mrg user-name-wrapper text-center"><%= @line_message.line_address %></td>
        </tr>
        <tr>
          <td width="20%" class="text-center"><strong>注意文言</strong></td>
          <td width="80%" class="line_message_mrg user-name-wrapper text-center"><%= @line_message.language_note %></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>
  <div class="row">
    <div class="col-sm-2 padding-0">
  		<a id="btn-delete-line_message" class='btn btn-default btn-white-1'><span style="color:red">削除</span></a>
  	</div>
  	<div class="col-sm-10 text-right padding-0">
      <a href="javascript:void();" class="btn btn-cancel" data-toggle="modal" data-target="#preview_modal">プレビュー</a>
      <%= link_to "編集する", edit_line_message_path(@line_message), class: "btn btn-save" %>
  	</div>
  </div>
</div>
<%= render partial: 'preview', locals: { line_message: @line_message} %>
<%= render partial: 'destroy' %>
