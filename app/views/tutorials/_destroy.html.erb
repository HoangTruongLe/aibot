<!-- Destroy Category modal -->
<div class="modal fade category-modal" id="destroy_tutorial_content" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog destroy_tutorial">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title text-center">削除</h4>
		</div>
    <div class="modal-body text-center">
      <!-- Modal Content -->
      <span id="tutorial_type"></span>
    </div>
		<div class="modal-footer">
      <a class="btn btn-cancel btn-submit-filter btn-smalll" data-dismiss="modal">キャンセル</a>
			<a id="delete_tutorial_content_id" class="btn btn-cancel btn-delete btn-submit-filter btn-smalll" data-remote="true" href="" data-method="delete" onclick="delete_tutorial_content()">
        削除する
      </a>
		</div>
	</div>
	</div>
</div>
<script type="text/javascript">
$(document).ready(function () {
  $('#btn-delete-tutorial').click(function(){
    var current_element = $(this)
    var link = '/tutorials/<%= @tutorial.id %>'
    $('#destroy_tutorial_content').find("#delete_tutorial_content_id").attr('href', link)
    $('#destroy_tutorial_content').find("#delete_tutorial_content_id").attr('data-remote', false)
    $('#destroy_tutorial_content').find("#tutorial_type").text("このチュートリアルを削除しますか？ ")
    $("#destroy_tutorial_content").modal("show")
  })
})
</script>
<!-- /Destroy Category modal -->
